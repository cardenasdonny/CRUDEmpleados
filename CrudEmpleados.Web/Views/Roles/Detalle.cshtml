@model List<string>


    <div class="content">

        <div class="container-fluid">

            <h3 class="text-center">Usuario: <b>@ViewBag.NombreUsuario</b></h3>
            <hr />

            <div class="container">
                <div class="row">
                    <div class="col-12">
                        @if (Model.Count == 0)
                        {
                            <p>No existen roles!</p>
                        }
                        else
                        {
                            <h3 class="text-center">Roles</h3>

                            <table class="table">
                                <thead class="bg-dark text-white">
                                    <tr>
                                        <th>Rol</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var rol in Model)
                                    {
                                        <tr>
                                            <td>@rol</td>
                                            <td>
                                                <a class="btn btn-outline-danger"
                                                   asp-route-rol="@rol"
                                                   asp-route-usuarioId="@ViewBag.UsuarioId"
                                                   asp-action="EliminarRolUsuario"
                                                   onclick="return confirm('Desea remover el rol al usuario?')">Eliminar Rol
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
