@model CrudEmpleados.Business.Dtos.EmpleadoDto

@{
    ViewData["Title"] = "Detalle";
    Layout = null;
}

<h1>Detalle</h1>

<h4>Empleado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-route-id="@Model.EmpleadoId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"><strong>Nombre: </strong> @Model.Nombre</label>
            </div>
            <div class="form-group">
                <label class="control-label"><strong>Documento: </strong> @Model.Documento</label>
            </div>
            <div class="form-group">
                <label class="control-label"><strong>Teléfono :</strong>@Model.Telefono</label>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <br />
                <img src="@("~/imagenes/" + Model.RutaImagen)" asp-append-version="true" class="img-fluid" />
            </div>


            @if (Model.Estado == true)
            {
                <div class="form-group">
                    <label class="control-label"><strong>Estado :</strong>Habilitado</label>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label class="control-label"><strong>Estado: </strong>Deshabilitado</label>
                </div>
            }

            <table class="table" id="tabla">
                <thead>
                    <tr>                        
                        <th>Cargo</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Cargos.Count(); i++)
                    {
                        <tr>                           
                           
                            <td>
                                @Html.DisplayFor(m => m.Cargos[i].Nombre)
                            </td>

                        </tr>

                    }

                </tbody>

            </table>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
